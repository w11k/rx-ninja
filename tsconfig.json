{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "module": "umd",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "rootDirs": ["src"],
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "outDir": "dist/bundle",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "**/*.test.ts"
  ]
}
